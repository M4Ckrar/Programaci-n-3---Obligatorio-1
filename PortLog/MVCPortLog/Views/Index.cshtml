
@{
    ViewBag.Title = "Index";
}
<h1>Registro de Usuarios</h1>
<form action="/Usuarios/Registro" method="post">
    <table>
        <tr>
            <td><label for="username">Cedula:</label></td>
            <td><input type="text" name="cedula"></td>
        </tr>
        <tr>
            <td><label for="password">Contraseña:</label></td>
            <td><input type="password" name="password"></td>
        </tr>
        <tr>
            <td><label for="repeatPassword">Repetir Contraseña:</label></td>
            <td><input type="password" name="repeatPassword"></td>
        </tr>
        <tr>
            <td><label for="rol">Rol:</label></td>
            <td>
                <select name="rol">
                    <option value="0">Almacen</option>
                    <option value="1">Admin</option>
                </select>
            </td>
        </tr>
    </table>
    <input type="submit" name="Registrar" value="Crear Usuario">
    <p class="MensajeError">@ViewBag.ErrMsg</p>
</form>

